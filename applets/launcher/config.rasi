/*
 * launcher/config.rasi - Launcher
 * Layout configuration for launcher applet
 * @author umutsevdi
 */

@import "../colors.rasi"

configuration {
	font:							"Roboto Regular 11";
    show-icons:                     true;
	icon-theme: 					"Qogir";
    display-drun: 					"";
    drun-display-format:            "{name}";
    disable-history:                false;
	sidebar-mode: 					false;
}

* {
    background-alt:              	#00000000;
    background-bar:                 @bg;
    border:		               		@focus;
    selected:               		@bg-none;
}

window {
    transparency:                   "real";
    background-color:               @bg-dark;
    text-color:                     @fg;
	border:							0px;
	border-color:					@border;
    border-radius:                  4px;
	width:							25%;
    location:                       center;
    x-offset:                       -20px;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
    padding:                        10px;
	background-color: 				@bg-none;
    text-color: 					@solid-focus;
    border-radius:                  0px;
    border-color:                  	@solid-focus;
    horizontal-align:               0.5;
    vertical-align:               0.5;

}

entry {
    font:							"Roboto Regular 12";

    background-color:               @bg-selection;
    text-color: 					@solid-focus;

    placeholder-color:              @solid-focus;
    expand:                         true;
    horizontal-align:               0.48;
    vertical-align:               0.5;
    placeholder:                    "Search...";
    padding:                        0px 0px 0px 0px;
    blink:                          true;
}

inputbar {
	children: 						[ textbox-prompt-colon , entry ];
    spacing:                        0px;
    background-color:               @bg-selection;
    text-color:                     @fg;
    border:                  		2px;
    border-radius:                  5px;
    border-color:                  	@solid-focus;
    margin:                         0px 0px 0px 0px;
    padding:                        0px;
    position:                       center;
}

listview {
    background-color:               @bg-none;
    columns:                        4;
    lines:	                        3;
    spacing:                        0%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg-dark;
	border:							0% 0% 0% 0%;
    border-radius:                  0% 0% 0% 0%;
	border-color:					@solid-focus;
    children:                       [ inputbar, listview ];
    spacing:                       	1.00%;
    padding:                        1.25% 0.75% 1.25% 0.75%;
}

element {
    background-color:               @bg-dark;
    text-color:                     @fg-dark;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        1.5% 0% 1.5% 0%;
}

element-icon {
    background-color: 				inherit;
    text-color:       				inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           48px;
    border:                         0px;
}

element-text {
    background-color: 				inherit;
    text-color:       				inherit;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               @bg-selection;
    text-color:                     @solid-fg;
    border:                  		2px;
    border-radius:                  5px;
    border-color:                  	@solid-focus;
}

textbox-prompt-colon {
    font:							@nerdfont;
	expand: 						false;
	str: 							" ï€‚ ";
	background-color: 				@solid-focus;
	text-color: 					@solid-bg;
    padding:                        10px;
}

