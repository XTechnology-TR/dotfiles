configuration {
    show-icons:                     false;
	font:                      		"Roboto Regular 12";
    disable-history:                false;
	sidebar-mode: 					false;
}

@import "../colors.rasi"

* {
    background-color:               @bg;
    text-color:                     @solid-fg;
}

window {
    transparency:                   "real";
    border-radius:                  0px;
    location:                       southeast;
	width:							400px;
    x-offset:                       -15px;
    y-offset:                       -15px;
}

prompt {
    enabled: 						true;
    padding:                        10px;
	background-color: 				@bg-none;
	text-color: 					@solid-focus;
    border-radius:                  0px;
    border-color:                  	@solid-focus;
}

textbox-prompt-colon {
	expand: 						false;
	str: 							" â™« ";
	background-color: 				@solid-focus;
	text-color: 					@solid-bg;
    padding:                        10px;
}

inputbar {
	children: 						[ textbox-prompt-colon, prompt ];
    spacing:                        0px;
    background-color:               @bg-selection;
    text-color:                     @fg;
    border:                  		2px;
    border-radius:                  5px;
    border-color:                  	@solid-focus;
    margin:                         0px 0px 0px 0px;
    padding:                        0px;
    position:                       center;
}

listview {
    columns:						4;
    lines:							1;
    spacing:                        12px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg-none;
    children:                       [ inputbar, listview ];
    spacing:                        12px;
    margin:                         10px;
}

listview {
    background-color:               @bg-none;
}
element {
    background-color:               @bg-selection;
    text-color:                     @fg;
    orientation:                    vertical;
    border-radius:                  5px;
}

element-text {
    background-color: 				@bg-none;
    text-color:       				inherit;
	font:							@nerdfont-big;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         12px 16px 12px 16px;
}

element normal.urgent,
element alternate.urgent {
    background-color:               @off;
    text-color:                     @bg-selection;
    border-radius:                  5px;
}

element normal.active,
element alternate.active {
    background-color:               @on;
    text-color:                     @bg-selection;
}

element selected {
    background-color:               @solid-focus;
    text-color:                     @bg-selection;
    border:                  		0px;
    border-radius:                  5px;
    border-color:                  	@border;
}

element selected.urgent {
    background-color:               @on;
    text-color:                     @bg-selection;
}

element selected.active {
    background-color:               @off;
    color:                          @bg-selection;
}
